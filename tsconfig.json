{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES5",
		"esModuleInterop": true,
		"sourceMap": true,
		"allowJs": true,
		"outDir": "dist",
		"baseUrl": ".",
		"rootDir": "src",
		"tsBuildInfoFile": ".cache/tsc/tsbuildinfo",
		"incremental": true,
		"lib": ["es2015", "es2016", "es2017", "es2019", "dom"]
	},
	"include": ["src", "src/**/*.json", "src/*.json"],
	"exclude": ["node_modules", "lib", "dist"]
}
